<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.mahler.GameController">
    <children>
        <!-- Label für Hinweise -->
        <Label fx:id="infoLabel" text="Rate die Farbe!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- ImageView für die Karte -->
        <ImageView fx:id="ivDeck" fitWidth="200" fitHeight="300" preserveRatio="true" pickOnBounds="true" />

        <!-- Buttons in HBox -->
        <HBox spacing="20" alignment="CENTER">
            <children>
                <Button text="Schwarz" mnemonicParsing="false" onAction="#onColorBlack" style="-fx-font-size: 18px; -fx-background-color: black; -fx-text-fill: white;"/>
                <Button text="Rot" mnemonicParsing="false" onAction="#onColorRed" style="-fx-font-size: 18px; -fx-background-color: red; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </children>
</VBox>
